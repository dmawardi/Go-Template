{{define "policy-edit-form"}}
<div class="content-container">
  <div class="row">
    <div>
      <h1>{{.SectionTitle}}</h1>
      <form class="admin-form" action="" method="">
        <div class="form-group">
          <table class="policy-table">
            <thead>
              <tr>
                <th>Role</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {{
               range $policyIndex, $policy := .PolicySection.FocusedPolicies
              }}
              <tr>
                <td>{{.Role}}</td>

                {{/* CRUD Section */}}
                <td>
                  <table class="policy-sub-table">
                    <thead>
                      <tr>
                        <th>Resource</th>
                        <th>Action</th>
                        <th>Edit</th>
                      </tr>
                    </thead>

                    <tbody>
                      <form action="" method="post">
                        <tr>
                          <td rowspan="4">{{ $policy.Resource }}</td>
                          {{
                            range.Actions
                          }}
                          {{if .Granted}}
                          <td class="active-policy">{{ .Action }}</td>
                          <td class="edit-policy-button-cell">
                            <button
                              type="submit"
                              class="remove-policy-button"
                              onclick="editPolicy(event,
                                'delete',
                                '{{ $policy.Role }}',
                                '{{ $policy.Resource }}',
                                '{{.Action}}' )"
                            >
                              Remove
                            </button>
                          </td>
                          {{else}}
                          <td class="inactive-policy">{{ .Action }}</td>
                          <td class="edit-policy-button-cell">
                            <button
                              type="submit"
                              class="add-policy-button"
                              onclick="editPolicy(event,
                                    'create',
                                    '{{ $policy.Role }}',
                                    '{{ $policy.Resource }}',
                                    '{{.Action}}' )"
                            >
                              Add
                            </button>
                          </td>

                          {{
                            end
                          }}
                        </tr>
                      </form>

                      {{
                        end
                      }}
                    </tbody>
                  </table>
                </td>
              </tr>
              {{
                end
              }}
            </tbody>
          </table>
        </div>

        {{/* Submission buttons */}}
        <button type="submit" class="submit-button">Submit</button>
      </form>
    </div>
  </div>
</div>
{{ end }}
`
