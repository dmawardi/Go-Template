{{define "content"}}
{{if .PageType.EditPage}}
<div class="content-container">
  <div class="row">
    <div>
      <h1>{{.SectionTitle}}</h1>
      {{template "form" .FormData}}
    </div>
  </div>
</div>
{{else if .PageType.ReadPage}}
<div class="content-container">
  <div class="row">
    <div>
      <h1>{{.SectionTitle}}</h1>
      <!-- Search box -->
      <div class="search-box">
        <form class="search-form" action="">
          <div class="search-form-row">
            <div class="search-form-col">
              <input
                type="text"
                id="search-input"
                class="search-input"
                name="search"
                placeholder="Search Records"
                value=""
              />
              <button type="submit" class="submit-button">Search</button>
            </div>
            <div class="search-form-col">
              <div class="records-per-page">
                <label for="recordsPerPage">Records per page:</label>
                <select id="recordsPerPage" name="recordsPerPage">
                  <option value="10">10</option>
                  <option value="20">20</option>
                  <option value="50">50</option>
                  <option value="100">100</option>
                </select>
              </div>
              <div class="record-nav-buttons">
                <button type="submit" name="page" value="previous">
                  Previous
                </button>
                <button type="submit" name="page" value="next">Next</button>
              </div>
            </div>
          </div>
        </form>
      </div>
      <!-- Data table (includes action box) -->
      {{ template "data-table" .TableData }}
    </div>
  </div>
</div>
{{else if .PageType.CreatePage}}
<div class="content-container">
  <div class="row">
    <div>
      <h1>{{.SectionTitle}}</h1>
      {{template "form" .FormData}}
    </div>
  </div>
</div>
{{else if .PageType.DeletePage}}
<div class="content-container">
  <div class="row">
    <div>
      <h1>{{.SectionTitle}}</h1>
      <div class="delete-box">
        <form
          class="delete-form"
          action="{{.FormData.FormDetails.FormAction}}"
          method="{{.FormData.FormDetails.FormMethod}}"
        >
          <a href="{{.SchemaHome}}" class="delete-cancel-button">Cancel</a>
          <button type="submit" class="delete-button">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{else if .PageType.SuccessPage}}
<div class="content-container">
  <div class="row">
    <div>
      <h1>{{.SectionTitle}}</h1>
    </div>
  </div>
</div>
{{else}}
<div class="content-container">
  <div>
    <div>
      <h1>Whoops! Sorry!</h1>
      <p>We couldn't find that page!</p>
    </div>
  </div>
</div>
{{ end }}

{{ end }}
