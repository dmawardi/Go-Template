{{define "content"}}
{{if .PageType.EditPage}}
<div class="content-container">
  <div class="row">
    <div>
      <h1>{{.SectionTitle}}</h1>
      {{template "form" .FormData}}
    </div>
  </div>
</div>
{{else if .PageType.ReadPage}}
<div class="content-container">
  <div class="row">
    <div>
      <h1>{{.SectionTitle}}</h1>
      <!-- Search box -->
      <div class="search-box">
        <form class="search-form" action="">
          <input
            type="text"
            id="search-input"
            class="search-input"
            name="search"
            placeholder="Search Records"
            value=""
            required
          />
          <button type="submit" class="submit-button">Search</button>
        </form>
      </div>
      <!-- Data table (includes action box) -->
      {{ template "data-table" .TableData }}
    </div>
  </div>
</div>
{{else if .PageType.CreatePage}}
<div class="content-container">
  <div class="row">
    <div>
      <h1>{{.SectionTitle}}</h1>
      {{template "form" .FormData}}
    </div>
  </div>
</div>
{{else if .PageType.DeletePage}}
<div class="content-container">
  <div class="row">
    <div>
      <h1>{{.SectionTitle}}</h1>
      <div class="delete-box">
        <form class="delete-form" action="">
          <a href="{{.SchemaHome}}" class="delete-cancel-button">Cancel</a>
          <button type="submit" class="delete-button">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{else if .PageType.SuccessPage}}
<div class="content-container">
  <div class="row">
    <div>
      <h1>{{.SectionTitle}}</h1>
    </div>
  </div>
</div>
{{else}}
<div class="content-container">
  <div>
    <div>
      <h1>Whoops! Sorry!</h1>
      <p>We couldn't find that page!</p>
    </div>
  </div>
</div>
{{ end }}

{{ end }}
